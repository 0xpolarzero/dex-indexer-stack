{
  "name": "@primodiumxyz/solana-dex-indexer-stack",
  "type": "module",
  "scripts": {
    "build": "pnpm recursive run build",
    "dev": "pnpm run dev:teardown && run-pty % pnpm dev:gql % pnpm dev:indexer",
    "dev:examples": "run-pty % pnpm dev:examples:server % pnpm dev:examples:dashboard",
    "dev:examples:dashboard": "pnpm --filter 'dashboard' run dev",
    "dev:examples:server": "pnpm --filter 'server' run dev",
    "dev:gql": "pnpm --filter 'gql' run dev",
    "dev:indexer": "pnpm --filter 'indexer' run start",
    "dev:teardown": "pnpm --filter 'gql' run teardown",
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "prepare": "dotenvx run -f .env --quiet -- sh -c '[ \"$NODE_ENV\" = production ] || { [ $(uname) = 'Darwin' ] && brew install swift-format; husky install; }'",
    "test": "pnpm recursive run test"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache",
    "*.{ts,tsx,css,md,mdx,sol}": "prettier --write"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "prettier": "^3.3.3",
    "typescript": "^5.5.0"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.14.1",
    "run-pty": "^5.0.0",
    "tsx": "^3.12.6"
  }
}
